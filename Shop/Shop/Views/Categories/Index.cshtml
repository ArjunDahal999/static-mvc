
@model List<Category>

@if(Model != null && Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var c in Model)
            {
                <tr>
                    <td>@c.CategoryId</td>
                    <td>@c.Name</td>
                    <td>@c.Description</td>
                    <td>
                        <a class="btn btn-dark text-light" 
                           asp-controller="Categories"
                           asp-route-id="@c.CategoryId"
                           asp-action="Edit">Edit</a> 
                    </td>
                    <td>
                        <a class="btn btn-danger text-light"
                         onclick=" return confirmDelete()"   
                           asp-controller="categories"
                           asp-action="delete"
                           asp-route-categoryId="@c.CategoryId"
                        >Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
       <a asp-controller="categories" asp-action="add" class="btn btn-primary text-light"> Add </a>
}

@section Script{
    <script>
        const confirmDelete = ()=>{
          return  confirm("Are you sure you want to delete this ?")
         
        }
    </script>
}
